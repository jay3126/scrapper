<p id="notice"><%= notice %></p>


<h1>Scraped Data</h1>

<h3><%= @scrapper.url %></h3>
<h3>Title: <%= @metatags.title%></h3>
<h3> Meta Tag Description: <%= @metatags.meta_tags["name"]["description"].first %></h3>
<h3> Meta Tag Keywords: <%= @metatags.meta_tags["name"]["keywords"].first %></h3>
<table>
   <thead>
     <tr>
       <th>Title</th>
       <th>Price</th>
       <th>Rating</th>
     </tr>
   </thead>
 
   <tbody>
     <% @doc.each do |item| %>
       <tr>
         <td><%= item.css(".s-access-title").text %></td>
         <td><%= item.css(".s-price").text %></td>
         <td><%= item.css("span+ .a-text-normal").text %></td>
       </tr>
     <% end %>
   </tbody>
</table>


<%= link_to 'Edit', edit_scrapper_path(@scrapper) %> |
<%= link_to 'Back', scrappers_path %>
